# set modifier
set $alt Mod1
set $home Mod4

# set font
font pango: Noto DeJaVu Mono 16 

# autostart
exec --no-startup-id compton 

exec --no-startup-id i3-msg 'workspace 2; append_layout ~/.dotfiles/i3/workspaces/ws_2.json'
exec --no-startup-id i3-msg 'workspace 2; exec alacritty'
exec --no-startup-id i3-msg 'workspace 2; exec firefox'

exec --no-startup-id i3-msg 'workspace 1; append_layout ~/.dotfiles/i3/workspaces/ws_1.json'
exec --no-startup-id i3-msg 'workspace 1; exec alacritty'
exec --no-startup-id i3-msg 'workspace 1; exec alacritty'
exec --no-startup-id i3-msg 'workspace 1; exec alacritty'

exec_always --no-startup-id sleep 5 && hsetroot -cover ~/Downloads/114133447_p0.png  # set wallpaper
# exec_always --no-startup-id hsetroot -solid "#252525"



# start a terminal on alt+enter
bindsym $alt+Return exec alacritty 

# start rofi
bindsym $alt+d exec rofi -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font 'Noto DeJaVu Mono 16'

# Use Mouse+$alt to drag floating windows to their wanted position
floating_modifier $alt

# lock screen 
bindsym $home+l exec i3lock -k -n -f -c 282828
# kill focused window
bindsym $alt+q kill

# toggle keyboard layout
bindsym $alt+t exec (setxkbmap -query | grep -q 'variant:\s\+intl') && setxkbmap -layout us || setxkbmap -layout us -variant intl
 

# change focus
bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l focus right

# move focused window
bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l move right


# enter fullscreen mode for the focused container
bindsym $alt+f fullscreen toggle

# change container layout split
bindsym $alt+Shift+s layout toggle split

# switch to workspace
bindsym $alt+1 workspace 1
bindsym $alt+2 workspace 2
bindsym $alt+3 workspace 3
bindsym $alt+4 workspace 4
bindsym $alt+5 workspace 5
bindsym $alt+6 workspace 6
bindsym $alt+7 workspace 7
bindsym $alt+8 workspace 8
bindsym $alt+9 workspace 9

# move focused container to workspace
bindsym $alt+Shift+1 move container to workspace 1
bindsym $alt+Shift+2 move container to workspace 2
bindsym $alt+Shift+3 move container to workspace 3
bindsym $alt+Shift+4 move container to workspace 4
bindsym $alt+Shift+5 move container to workspace 5
bindsym $alt+Shift+6 move container to workspace 6
bindsym $alt+Shift+7 move container to workspace 7
bindsym $alt+Shift+8 move container to workspace 8
bindsym $alt+Shift+9 move container to workspace 9

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart

# exit i3
bindsym $alt+Shift+q exec i3-msg exit 


# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 4 px or 4 ppt
        bindsym j resize grow height 4 px or 4 ppt
        bindsym k resize shrink height 4 px or 4 ppt
        bindsym l resize grow width 4 px or 4 ppt
        bindsym Return mode "default"
        bindsym $alt+r mode "default"
        bindsym Escape mode "default"
}
bindsym $alt+r mode "resize"

# Borders
for_window [class="^.*"] border pixel 4
gaps inner 8
gaps outer 0
smart_gaps on
hide_edge_borders smart_no_gaps
# colour of                 border  backg   text    ind     child_border
client.focused              #a89984 #282828 #a89984 #a89984 #458588 
client.focused_inactive     #a89984 #282828 #a89984 #a89984 #a89984
client.unfocused            #a89984 #282828 #a89984 #a89984 #a89984
client.urgent               #a89984 #282828 #a89984 #a89984 #a89984
client.placeholder          #a89984 #282828 #a89984 #a89984 #a89984
client.background           #a89984


focus_follows_mouse yes
mouse_warping none

#black   #282828
#red     #cc241d
#green   #98971a
#yellow  #d79921
#blue    #458588
#magenta #b16286
#cyan    #689d6a
#white   #a89984

exec_always --no-startup-id ~/.config/polybar/launch.sh 
